{
    "name": "focus-highlight",
    "displayName": "%ext.displayName%",
    "description": "%ext.description%",
    "version": "1.0.2",
    "publisher": "tianyajum",
    "icon": "src/static/icon.png",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/4Dark/FocusHighlight.git"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "focusHighlight.toggle",
                "title": "%command.toggle%"
            },
            {
                "command": "focusHighlight.selectTheme",
                "title": "%command.selectTheme%"
            }
        ],
        "configuration": [
            {
                "title": "%config.group.general%",
                "properties": {
                    "focusHighlight.enabled": {
                        "type": "boolean",
                        "default": true,
                        "description": "%config.enabled.description%",
                        "order": 1
                    },
                    "focusHighlight.theme": {
                        "type": "string",
                        "default": "softBlue",
                        "enum": [
                            "softBlue",
                            "eyeCareGreen",
                            "strikingAmber",
                            "lowKeyGray",
                            "deepOcean",
                            "forestGreen",
                            "warmSunset",
                            "lavenderPurple",
                            "minimalist",
                            "highContrast",
                            "custom"
                        ],
                        "enumDescriptions": [
                            "%theme.softBlue%",
                            "%theme.eyeCareGreen%",
                            "%theme.strikingAmber%",
                            "%theme.lowKeyGray%",
                            "%theme.deepOcean%",
                            "%theme.forestGreen%",
                            "%theme.warmSunset%",
                            "%theme.lavenderPurple%",
                            "%theme.minimalist%",
                            "%theme.highContrast%",
                            "%theme.custom%"
                        ],
                        "description": "%config.theme.description%",
                        "order": 2
                    }
                }
            },
            {
                "title": "%config.group.elements%",
                "properties": {
                    "focusHighlight.showGutterIcon": {
                        "type": "boolean",
                        "default": true,
                        "description": "%config.showGutterIcon.description%",
                        "order": 1
                    },
                    "focusHighlight.showBottomBorder": {
                        "type": "boolean",
                        "default": true,
                        "description": "%config.showBottomBorder.description%",
                        "order": 2
                    },
                    "focusHighlight.bottomBorderWidth": {
                        "type": "string",
                        "default": "1px",
                        "description": "%config.bottomBorderWidth.description%",
                        "order": 3
                    },
                    "focusHighlight.bottomBorderStyle": {
                        "type": "string",
                        "default": "solid",
                        "enum": [
                            "solid",
                            "dashed",
                            "dotted",
                            "double"
                        ],
                        "description": "%config.bottomBorderStyle.description%",
                        "order": 4
                    },
                    "focusHighlight.customBottomBorderColor": {
                        "type": "string",
                        "default": "",
                        "description": "%config.customBottomBorderColor.description%",
                        "order": 5
                    }
                }
            },
            {
                "title": "%config.group.custom%",
                "properties": {
                    "focusHighlight.customBackgroundColor": {
                        "type": "string",
                        "default": "",
                        "description": "%config.customBackgroundColor.description%",
                        "order": 1
                    },
                    "focusHighlight.customBorderColor": {
                        "type": "string",
                        "default": "",
                        "description": "%config.customBorderColor.description%",
                        "order": 2
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.70.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "eslint": "^8.20.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "@vscode/test-electron": "^2.1.5"
    }
}
